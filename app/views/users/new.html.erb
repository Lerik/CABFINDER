<div id="contact">

      <div class="row section-head">
         <div class="col full">
            <h2>New User</h2>
         </div>
         <% flash.each do |name, msg| -%>
      <%= content_tag :div, msg, class: name %>
    <% end -%>
      </div>

      <div class="row">

         <div class="col g-7">

            <!-- form -->

            <%= form_for @user, url: users_path(:user => @user, :company => @company.id), :html => {:id => "contactForm"} do |f| %>

					<fieldset>

                  <div>
                     <%= f.label :name %><br />
                     <%= f.text_field :name %>
                  </div>

                  <div>
                     <%= f.label :email %><br />
                     <%= f.text_field :email %>
                  </div>

                  <div>
                     <%= f.label :password %><br />
                     <%= f.password_field :password %>
                  </div>

                  <div>
                     <%= f.label :password_confirmation %><br />
                     <%= f.password_field :password_confirmation %>
                  </div>

                  <div>
                     <%= f.label :number1 %><br />
                     <%= f.phone_field :number1 %>
                  </div>

                  <div>
                     <%= f.label :number2 %><br />
                     <%= f.phone_field :number2 %>
                  </div>

                  <div>
                     <button class="submit">Create</button>
                     <span id="image-loader">
                        <img src="images/loader.gif" alt="" />
                     </span>
                  </div>

					</fieldset>
				<% end %><!-- Form End -->

            <!-- contact-warning -->
            <div id="message-warning"></div>
            <!-- contact-success -->
				<div id="message-success">
               <i class="icon-ok"></i>Your message was sent, thank you!<br />
				</div>

         </div>

      </div>

   </div> 