<div id="right">
   <h4>User Information</h4>
   <div id="notice">
      <p><strong>Name: </strong><%= @user.name %></p>
      <p><strong>Email: </strong><%= @user.email %></p>
      <p><strong>First Phone Number: </strong><%= @user.number1 %></p>
      <p><strong>Secondary Phone Number: </strong><%= @user.number2 %></p>
   </div>

   </br>

   <% if @userroles.size!=0 %>
      <table>
         <tr>
            <th>
               Role that user has
            </th>
         </tr>
         
         <% @userroles.each do |ur| %>
            <tr>
               <td><%= Role.find(ur.role_id).name %></td>
            </tr>
         <% end %>
      </table>
   <% end %>

   <br>

   <ul id="leftmenu">
      <li><a ><%= link_to "Edit User", edit_user_path(@user.id)%></a></li>
      <li><a ><%= link_to "Delete User", user_path(@user.id), method: :delete, data: { confirm: 'Are you sure?' } %></a></li>
   </ul>
</div>